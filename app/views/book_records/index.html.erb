<%= render 'navbar' %>

<div class= "col-lg-12">
  <div class="card rounded-0 mt-5 mb-5">
      <div class="card-body">
          <h2 class="text-center">Book Record</h2>
      </div>
  </div>

<%= link_to 'Add New Book Record', new_book_record_path, class: "btn btn-primary btn-lg mb-4 rounded-0" %>

<%= render 'search_form' %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Book ID</th>
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
      <th>Author Address</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @book_records.each do |book_record| %>
      <tr>
        <td><%= book_record.book_id %></td>
        <td><%= book_record.title %></td>
        <td><%= book_record.content %></td>
        <td><%= book_record.author %></td>
        <td><%= book_record.author_address %></td>
        <td><%= book_record.price %></td>
        <td>
          <%= link_to 'Edit', edit_book_record_path(book_record.id) , class: "btn btn-primary"%>
          <%= link_to "View", book_record_path(book_record), class: "btn btn-info"%>
          <%= link_to 'Delete', book_record_path(book_record), class: "btn btn-danger", data: { 
              turbo_method: :delete, 
              turbo_confirm: 'Are you sure?'  }%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>